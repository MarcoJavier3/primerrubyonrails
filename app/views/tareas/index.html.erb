<h1>Mis Tareas </h1>

<table class="table table-hover">
    <thead class="thead-dark">
        <th>Tarea</th>
        <th>Editar</th>
       <th>Eliminar</th>
    </thead>
 <% @tareas.each do |tarea| %>

    <tr>
    <td> <%= link_to  tarea.titulo, tarea  %></td>
    <!--#{controller: "tareas", action: "show", id: tarea.id}-->
    <td><%=link_to "Editar", edit_tarea_path(tarea), class: "btn btn-warning" %></td>
    <!-- {controller: "tareas", action: "edit", id: tarea.id} -->
    <td><%= link_to  "Eliminar", tarea , method: "delete" , data: {confirm:"estas seguro?"}, class:"btn btn-danger" %> </td>
    <!-- {controller: "tareas", action: "destroy", id: tarea.id}  -->
    </tr>


    <%end%>


</table>
